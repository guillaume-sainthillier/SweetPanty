{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'app.title'|trans }}</h1>
    <hr />
    <div class="row">
    {% for underware in underwares %}
        <div class="col-md-4 col-lg-3 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ underware.name }}</h3>
                </div>
                <div class="panel-body">
                    <p>{{ underware.description }}</p>
                </div>
                <div class="panel-footer text-right">
                    {{ 'wore_since'|transchoice(underware.feature.woreDuration, {
                        '%label%': '<span class="label label-primary">'~ underware.feature.woreDuration ~'</span>'
                    })|raw }}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

{% block css %}

{% endblock %}
